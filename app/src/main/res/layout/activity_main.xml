<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Fahrenheit"
        android:layout_width="379dp"
        android:layout_height="86dp"
        android:text="Fahrenheit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CelsiusValue"
        android:layout_width="379dp"
        android:layout_height="86dp"
        android:layout_marginBottom="16dp"
        android:text="0ºC"
        app:layout_constraintBottom_toTopOf="@+id/Fahrenheit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/seekBarC"
        android:layout_width="379dp"
        android:layout_height="86dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/CelsiusValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Celsius"
        android:layout_width="379dp"
        android:layout_height="86dp"
        android:layout_marginBottom="16dp"
        android:text="Celsius"
        app:layout_constraintBottom_toTopOf="@+id/seekBarC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/seekBarF"
        android:layout_width="379dp"
        android:layout_height="86dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Fahrenheit" />

    <TextView
        android:id="@+id/FahrenheitValue"
        android:layout_width="379dp"
        android:layout_height="86dp"
        android:layout_marginTop="16dp"
        android:text="32ºF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarF" />

    <TextView
        android:id="@+id/Msg"
        android:layout_width="379dp"
        android:layout_height="87dp"
        android:layout_marginTop="16dp"
        android:text="Interesting Message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FahrenheitValue" />

</androidx.constraintlayout.widget.ConstraintLayout>